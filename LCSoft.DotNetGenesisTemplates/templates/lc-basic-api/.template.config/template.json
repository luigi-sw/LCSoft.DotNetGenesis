{
  "$schema": "http://json.schemastore.org/template",
  "author": "Luigi C. Filho",
  "classifications": [ "WebAPI", "API", "DDD" ],
  "identity": "LCSoft API Template",
  "name": "LCSoft API Template",
  "shortName": "lc-basic-api",
  //"sourceName": "__company__.__project__",
  "sourceName": "solutionName",
  "preferNameDirectory": true,
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "symbols": {
    "company": {
      "type": "parameter",
      "datatype": "string",
      "replaces": "__company__",
      //"fileRename": "_company_placeholder_",
      "defaultValue": "MyCompany"
    },
    "projectName": {
      "type": "parameter",
      "datatype": "string",
      "replaces": "__project__",
      //"fileRename": "_projectName_placeholder_",
      "defaultValue": "MyProject"
    },
    "solutionName": {
      "type": "generated",
      "generator": "join",
      "replaces": "__company__.__project__",
      "fileRename": "_solutionName_placeholder_",
      "parameters": {
        "symbols": [
          {
            "type": "ref",
            "value": "company"
          },
          {
            "type": "ref",
            "value": "projectName"
          }
        ],
        "separator": ".",
        "removeEmptyValues": true
      }
    }
  },
  "sources": [
    {
      "source": "./",
      "target": "./",
      "exclude": [
        "**/[Bb]in/**",
        "**/[Oo]bj/**",
        ".template.config/**",
        "**/*.filelist",
        "**/.keep",
        "**/scripts/**"
      ]
    }
  ],
  "postActions": [
    {
      "id": "CreateSolution",
      "description": "Create the solution file and add the project.",
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "applyFileRenamesToArgs": [ "args" ],
      "args": {
        "executable": "dotnet",
        "args": "new sln --name \"_solutionName_placeholder_\""
      },
      "manualInstructions": [
        {
          "text": "Run manually: pwsh scripts/create-sln.ps1 -ProjectName {{name}} -OutputDir {{outputDirectory}}"
        }
      ],
      "continueOnError": true
    },
    {
      "id": "AddProjectsToSolution",
      "description": "Add all projects to the solution.",
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "applyFileRenamesToArgs": [ "args" ],
      "args": {
        "executable": "dotnet",
        "args": "sln add \"src/Api/_solutionName_placeholder_.Api.csproj\""
      },
      "continueOnError": false
    },
    {
      "id": "AddApplicationProject",
      "description": "Add Application project to solution.",
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "applyFileRenamesToArgs": [ "args" ],
      "args": {
        "executable": "dotnet",
        "args": "sln add \"src/Application/_solutionName_placeholder_.Application.csproj\""
      },
      "continueOnError": false
    },
    {
      "id": "AddCoreProject",
      "description": "Add Core project to solution.",
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "applyFileRenamesToArgs": [ "args" ],
      "args": {
        "executable": "dotnet",
        "args": "sln add \"src/Core/_solutionName_placeholder_.Core.csproj\""
      },
      "continueOnError": false
    },
    {
      "id": "AddInfrastructureProject",
      "description": "Add Infrastructure project to solution.",
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "applyFileRenamesToArgs": [ "args" ],
      "args": {
        "executable": "dotnet",
        "args": "sln add \"src/Infrastructure/_solutionName_placeholder_.Infrastructure.csproj\""
      },
      "continueOnError": false
    },
    {
      "id": "AddUnitTestsProject",
      "description": "Add Unit Tests project to solution.",
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "applyFileRenamesToArgs": [ "args" ],
      "args": {
        "executable": "dotnet",
        "args": "sln add \"tests/UnitTests/_solutionName_placeholder_.UnitTests.csproj\""
      },
      "continueOnError": false
    },
    {
      "id": "AddIntegrationTestsProject",
      "description": "Add Integration Tests project to solution.",
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "applyFileRenamesToArgs": [ "args" ],
      "args": {
        "executable": "dotnet",
        "args": "sln add \"tests/IntegrationTests/_solutionName_placeholder_.IntegrationTests.csproj\""
      },
      "continueOnError": false
    }
  ]
}
