{
  "$schema": "http://json.schemastore.org/template",
  "author": "Luigi C. Filho",
  "classifications": [ "WebAPI", "API", "DDD" ],
  "identity": "LCSoft API Template",
  "name": "LCSoft API Template",
  "shortName": "lc-basic-api",
  "sourceName": "solutionName",
  "preferNameDirectory": true,
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "symbols": {
    "company": {
      "type": "parameter",
      "datatype": "string",
      "replaces": "__company__",
      "defaultValue": "MyCompany"
    },
    "projectName": {
      "type": "parameter",
      "datatype": "string",
      "replaces": "__project__",
      "defaultValue": "MyProject"
    },
    "solutionName": {
      "type": "generated",
      "generator": "join",
      "replaces": "__company__.__project__",
      "fileRename": "_solutionName_placeholder_",
      "parameters": {
        "symbols": [
          {
            "type": "ref",
            "value": "company"
          },
          {
            "type": "ref",
            "value": "projectName"
          }
        ],
        "separator": ".",
        "removeEmptyValues": true
      }
    }
  },
  "sources": [
    {
      "source": "./",
      "target": "./",
      "exclude": [
        "**/[Bb]in/**",
        "**/[Oo]bj/**",
        ".template.config/**",
        "**/*.filelist",
        "**/.keep",
        "**/scripts/**"
      ]
    }
  ],
  "postActions": [
    {
      "id": "CreateSolution",
      "description": "Create the solution file and add the project.",
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "applyFileRenamesToArgs": [ "args" ],
      "args": {
        "executable": "dotnet",
        "args": "new sln --name \"_solutionName_placeholder_\""
      },
      "manualInstructions": [
        {
          "text": "Run manually: dotnet new sln --name {Your Solution Name}"
        }
      ],
      "continueOnError": true
    },
    {
      "id": "AddAllProjectsToSolution",
      "description": "Add all projects to the solution.",
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "applyFileRenamesToArgs": [ "args" ],
      "args": {
        "executable": "cmd",
        "args": "/c \"dotnet sln add src/Api/_solutionName_placeholder_.Api.csproj && dotnet sln add src/Application/_solutionName_placeholder_.Application.csproj && dotnet sln add src/Core/_solutionName_placeholder_.Core.csproj && dotnet sln add src/Infrastructure/_solutionName_placeholder_.Infrastructure.csproj && dotnet sln add tests/UnitTests/_solutionName_placeholder_.UnitTests.csproj && dotnet sln add tests/IntegrationTests/_solutionName_placeholder_.IntegrationTests.csproj\""
      },
      "continueOnError": false
    }
