{
  "$schema": "http://json.schemastore.org/template",
  "author": "Luigi C. Filho",
  "classifications": [ "WebAPI", "API", "DDD" ],
  "identity": "LCSoft API Template",
  "name": "LCSoft API Template",
  "shortName": "lc-basic-api",
  //"sourceName": "__company__.__project__",
  "sourceName": "solutionName",
  "preferNameDirectory": true,
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "symbols": {
    "company": {
      "type": "parameter",
      "datatype": "string",
      "replaces": "__company__",
      "fileRename": "_company_placeholder_",
      "defaultValue": "MyCompany"
    },
    "projectName": {
      "type": "parameter",
      "datatype": "string",
      "replaces": "__project__",
      "fileRename": "_projectName_placeholder_",
      "defaultValue": "MyProject"
    },
    "solutionName": {
      "type": "generated",
      "generator": "join",
      "replaces": "__company__.__project__",
      "fileRename": "_solutionName_placeholder_",
      "parameters": {
        "symbols": [
          {
            "type": "ref",
            "value": "company"
          },
          {
            "type": "ref",
            "value": "projectName"
          }
        ],
        "separator": ".",
        "removeEmptyValues": true
      }
    } //,
