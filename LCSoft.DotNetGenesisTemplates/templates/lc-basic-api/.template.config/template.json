  ],
  "postActions": [
    {
      "id": "CreateSolution",
      "description": "Create the solution file and add the project.",
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "applyFileRenamesToArgs": [ "args" ],
      "args": {
        "executable": "dotnet",
        "args": "new sln --name \"_solutionName_placeholder_\""
      },
      "manualInstructions": [
        {
          "text": "Run manually: pwsh scripts/create-sln.ps1 -ProjectName {{name}} -OutputDir {{outputDirectory}}"
        }
      ],
      "continueOnError": true
    }
