{
  "Logging": {
    "LogLevel": {
      "Default": "Warning", //Information
      //"Microsoft": "Information",
      "Microsoft.AspNetCore.HttpLogging.HttpLoggingMiddleware": "Information"
    }
  },
  "SecurityHeaders": {
    "ContentSecurityPolicy": "default-src 'self'; script-src 'self'; style-src 'self';",
    "ReferrerPolicy": "no-referrer-when-downgrade",
    "UseHsts": true,
    "HstsMaxAgeDays": 365,
    "AddXContentTypeOptions": true,
    "AddXFrameOptions": true,
    "AddXXssProtection": false
  },
  // Strict Option
  //"SecurityHeaders": {
  //  "ContentSecurityPolicy": "default-src 'self'; script-src 'self'; style-src 'self'; img-src 'self'; object-src 'none'; frame-ancestors 'none'; base-uri 'self'; form-action 'self';",
  //  "ReferrerPolicy": "strict-origin",
  //  "UseHsts": true,
  //  "HstsMaxAgeDays": 365
  //}
  "AllowedHosts": "*"
}