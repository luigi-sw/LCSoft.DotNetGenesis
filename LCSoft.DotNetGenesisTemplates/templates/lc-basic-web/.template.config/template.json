{
  "$schema": "http://json.schemastore.org/template",
  "author": "Luigi C. Filho",
  "classifications": [ "Web App", "Web", "DDD" ],
  "identity": "LCSoft Web Template",
  "name": "LCSoft Web Template",
  "shortName": "lc-basic-web",
  "sourceName": "solutionName",
  //"placeholderFilename": ".keep",
  "preferNameDirectory": true,
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "symbols": {
    "company": {
      "type": "parameter",
      "datatype": "string",
      "replaces": "__company__",
      "defaultValue": "MyCompany"
    },
    "projectName": {
      "type": "parameter",
      "datatype": "string",
      "replaces": "__project__",
      "defaultValue": "MyProject"
    },
    "solutionName": {
      "type": "generated",
      "generator": "join",
      "replaces": "__company__.__project__",
      "fileRename": "_solutionName_placeholder_",
      "parameters": {
        "symbols": [
          {
            "type": "ref",
            "value": "company"
          },
          {
            "type": "ref",
            "value": "projectName"
          }
        ],
        "separator": ".",
        "removeEmptyValues": true
      }
    }
  },
  "sources": [
    {
      "source": "./",
      "include": [ "**/*" ],
      "target": "./",
      "exclude": [
        "**/[Bb]in/**",
        "**/[Oo]bj/**",
        ".template.config/**",
        "**/*.filelist"
      ],
      //"modifiers": [
      //  {
      //    "exclude": [
      //      "**/.template.config/**"
      //    ]
      //  }
      //],
      //"copyOnly": [
      //  "**/.keep"
      //]
    }
  ],
  "postActions": [
    {
      "id": "CreateSolution",
      "description": "Create the solution file and add the project.",
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "applyFileRenamesToArgs": [ "args" ],
      "args": {
        "executable": "dotnet",
        "args": "new sln --name \"_solutionName_placeholder_\""
      },
      "manualInstructions": [
        {
          "text": "Run manually: dotnet new sln --name {Your Solution Name}"
        }
      ],
      "continueOnError": true
    },
    {
      "id": "AddAllProjectsToSolution",
      "description": "Add all projects to the solution.",
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "applyFileRenamesToArgs": [ "args" ],
      "args": {
        "executable": "cmd",
        "args": "/c \"dotnet sln add src/Web/_solutionName_placeholder_.Web.csproj && dotnet sln add src/Application/_solutionName_placeholder_.Application.csproj && dotnet sln add src/Core/_solutionName_placeholder_.Core.csproj && dotnet sln add src/Infrastructure/_solutionName_placeholder_.Infrastructure.csproj && dotnet sln add tests/UnitTests/_solutionName_placeholder_.UnitTests.csproj \""
      },
      "manualInstructions": [
        {
          "text": "Run manually: dotnet sln add src/{Your Solution Name}.Web.csproj && dotnet sln add tests/UnitTests/{Your Solution Name}.UnitTests.csproj"
        }
      ],
      "continueOnError": false
    }
  ]
}
