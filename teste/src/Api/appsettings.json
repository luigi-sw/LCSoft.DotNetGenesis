{
  "ConnectionStrings": {
    "DefaultConnection": "sql"
  },
  "JwtSettings": {
    "SecretKey": "ASDFGHJKLÇZXCVBNM<>:ERTYUIOP`!@#$%¨&*()_+XCVBL34567890-sdfghjklçzxcvbnm,./;'[]{}|:QWERTYUIOPASDFGHJKLZXCVBNM",
    "Issuer": "MyApp",
    "Audience": "MyAppAudience"
  },
  "Logging": {
    "DefaultProvider": "Microsoft", // "Serilog" or "Microsoft"
    "LogLevel": {
      //"Default": "Information", //Trace
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Microsoft": {
      "LogLevel": {
        //"Default": "Information",
        "Default": "Information",
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      },
      "Console": {
        "FormatterName": "custom",
        "FormatterOptions": {
          "IncludeScopes": true,
          "TimestampFormat": "HH:mm:ss "
        }
      }
    },
    "Serilog": {
      "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
      "MinimumLevel": {
        "Default": "Information",
        "Override": {
          "Microsoft": "Warning",
          "System": "Warning"
        }
      },
      "WriteTo": [
        {
          "Name": "Console",
          "Args": {
            "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
          }
        },
        {
          "Name": "File",
          "Args": {
            "path": "logs/log-.txt",
            "rollingInterval": "Day"
          }
        }
      ],
      "Enrich": [ "FromLogContext", "WithMachineName" ]
    },
    "ApiDocumentation": {
      "Title": "Minha API Customizada",
      "Version": "v1",
      "Description": "Exemplo alterando endpoint e nome.",
      "ServerUrl": "https://www.lcdev.com.br",
      "ServerDescription": "Meu Server",
      "LicenseName": "LCDev License",
      "LicenseUrl": "https://lcdev.com.br/license",
      "TermsUrl": "https://lcdev.com.br",
      "ContactName": "LCDev Support",
      "ContactUrl": "https://lcdev.com.br/support",
      "ContactEmail": "support@lcdev.com.br",
      "Tags": [
        {
          "Name": "Minha API Customizada",
          "Description": "Descrição da minha API customizada."
        }
      ]
    }
  }
}
